<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
	<display-name>cdb</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
  
	<servlet>
		<servlet-name>ComputerServlet</servlet-name>
		<servlet-class>com.excilys.cdb.controler.web.ComputerServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListComputerServlet</servlet-name>
		<servlet-class>com.excilys.cdb.controler.web.ListComputerServlet</servlet-class>
	</servlet>
	
	<error-page>
	    <error-code>403</error-code>
	    <location>/WEB-INF/view/403.html</location>
	</error-page>
		<error-page>
	    <error-code>404</error-code>
	    <location>/WEB-INF/view/404.html</location>
	</error-page>
		<error-page>
	    <error-code>500</error-code>
	    <location>/WEB-INF/view/500.html</location>
	</error-page>
</web-app>